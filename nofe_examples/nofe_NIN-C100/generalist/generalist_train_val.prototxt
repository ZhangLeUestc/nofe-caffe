# compares fc8 to meta_label. 
# label: = real_labels, just for readin inside solver
layer {
  name: "prediction"
  type: "MapPrediction"
  bottom: "pool3"
  bottom: "label"
  bottom: "meta_label"
  top: "prediction"
  include {
    phase: TEST
  }
}


layer {
  name: "loss"
  type: "SoftmaxWithLoss"
  bottom: "pool3"
  bottom: "meta_label"
  top: "loss"
}
